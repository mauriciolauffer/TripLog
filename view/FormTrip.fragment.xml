<core:FragmentDefinition xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns="sap.m">
	<l:Grid defaultSpan="L12 M12 S12" width="auto">
		<l:content>
			<f:SimpleForm minWidth="800" maxContainerCols="2"
				editable="true" layout="ResponsiveGridLayout" labelSpanL="3"
				labelSpanM="3" emptySpanL="4" emptySpanM="4" columnsL="1" columnsM="1">
				<f:content>
					<core:Title text="{i18n>newTrip}" />
					<Label text="{i18n>tripName}" />
					<Input id="name" value="{newTrip>/Detail/Name}" />
					<Label text="{i18n>dateBegin}" />
					<DateTimeInput id="dateBegin" type="Date"
						value="{newTrip>/Detail/DateBegin}" />
					<Label text="{i18n>dateEnd}" />
					<DateTimeInput id="dateEnd" type="Date"
						value="{newTrip>/Detail/DateEnd}" />
				</f:content>
			</f:SimpleForm>
		</l:content>
	</l:Grid>
</core:FragmentDefinition>